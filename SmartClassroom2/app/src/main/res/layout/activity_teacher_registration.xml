<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacher_registartion_ll"
    android:orientation="vertical"
    android:background="@color/Project_bgcolor"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@drawable/ill_border"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/ill_teacher_registration_dialog"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Teacher Registeration"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="19sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/text_color"
            android:layout_width="wrap_content"
            android:id="@+id/til_teacher_registration_name"
            android:hint="Name"
            android:layout_height="wrap_content">

            <!-- android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ" -->
            <EditText
                android:id="@+id/teacher_registration_name"
                style="@style/edittext_style"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/name"
                android:inputType="textPersonName"
                android:textColorHint="@color/text_color"
                />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:hint="Teacher Id"
            android:id="@+id/til_teacher_registration_id"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/teacher_registration_id"
                style="@style/edittext_style"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/id"
                android:inputType="number"
                android:maxLength="10"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/text_color"
            android:hint="Subject Name"
            android:layout_width="wrap_content"
            android:id="@+id/til_teacher_registration_sub"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/teacher_registration_sub"
                style="@style/edittext_style"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/book"
                android:digits="0123456789- QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/text_color"
            android:hint="Email"
            android:layout_width="wrap_content"
            android:id="@+id/til_teacher_registration_email"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/teacher_registration_email"
                style="@style/edittext_style"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/email"
                android:inputType="textEmailAddress"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:hint="Password"
            app:passwordToggleEnabled="false"
            app:passwordToggleTint="@color/text_color"
            android:id="@+id/til_teacher_registration_Password"
            android:textColorHint="@color/text_color"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/teacher_registartion_password"
                android:digits="0123456789- QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/padlock"
                style="@style/edittext_style"
                android:inputType="textPassword"/>


        </android.support.design.widget.TextInputLayout>




        <Button
            android:background="@drawable/edittext_shape"
            android:id="@+id/teacher_register_button"
            style="@style/button_style"
            android:layout_marginTop="15dp"
            android:text="Register"
            />


    </LinearLayout>



    <TextView
        android:id="@+id/teacher_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_color"
        android:text="Already Registered ? Log in"
        android:textStyle="bold"/>




</LinearLayout>