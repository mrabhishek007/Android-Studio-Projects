<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/student_fragment_ll1"
    android:background="@color/Project_bgcolor"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Structure"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:id="@+id/sub1_name_tv"/>



    <LinearLayout
        android:gravity="center"
        android:background="@drawable/daily_routine_update_ill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture Details"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"/>

     <TextView
         android:layout_marginTop="50dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:ems="11"
         android:text="Date-22-12-2016"
         android:textAlignment="center"

         android:id="@+id/date1_name_tv"
         android:textStyle="bold"
         android:textColor="@color/text_color"
         android:textSize="18dp"
         android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter Name-"
            android:id="@+id/chapter1_name_tv"
            android:textAlignment="center"
            android:ems="11"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18dp"

            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic Name- "
            android:id="@+id/topic1_name_tv"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18dp"

            android:layout_marginBottom="30dp"/>


    </LinearLayout>




</LinearLayout>